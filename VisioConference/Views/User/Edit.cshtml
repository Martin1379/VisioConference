@model VisioConference.DTO.UserDTO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<div class="container">
    <br><br>
                <div class="page-header">
                    Modifier l'utilisateur @Html.ActionLink("Back to List", "Index")
                </div>
            <div class="row">

                <br />

                <div class="col-lg-2">
                    <br /><br />
                    <div class="form-group">
                        <div>
                            <img src="~/Content/avatar_user/@Model.Photo" class="img-responsive" style="height:80px" />
                        </div>
                    </div>
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.Pseudo) :</b> @Html.DisplayFor(model => model.Pseudo)
                    </div>
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.Email) :</b> @Html.DisplayFor(model => model.Email)
                    </div>
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.Password) : </b> *****
                    </div>
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.Connected) :</b> @Html.DisplayTextFor(model => model.Connected)
                    </div>
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.IsAdmin) :</b> @Html.DisplayTextFor(model => model.IsAdmin)
                    </div>
                    <div class="form-group">
                        <b>@Html.DisplayNameFor(model => model.Photo) :</b> @Html.DisplayFor(model => model.Photo)
                    </div>
                </div>


                @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { encType = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-lg-6">
                        <div class="form-horizontal">
                            <br />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <br />

                            <div class="form-group">
                                @Html.LabelFor(model => model.Pseudo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div>
                                    @Html.EditorFor(model => model.Pseudo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Pseudo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div>
                                    <input type="file" name="Photo" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Connected, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-lg-1">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.Connected)
                                        @Html.ValidationMessageFor(model => model.Connected, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-lg-1">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.IsAdmin)
                                        @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>



                        </div>
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }




            </div>
        </div>
