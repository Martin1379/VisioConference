@model  VisioConference.DTO.ContactDTO

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container body-content">

    <div class="jumbotron">
        <h2 id="h2-accueil">Ecrivez nous !</h2>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="row" style="margin-left:50px;">
                <div class="col-md-12 center-block">
                    <div class="row col-lg-4">
                    </div>
                    <div class="rox col-lg-8" style="margin:auto; padding-left:10%;">
                        <div class="form-group">                          
                            @*@Html.Label("Votre Nom", htmlAttributes: new { @class = "control-label col-md-3" })*@
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.SenderName, new { @class = "form-control", @placeholder = "Votre Nom" })
                                @Html.ValidationMessageFor(m => m.SenderName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-3" })*@
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.SenderEmail, new { @class = "form-control", @placeholder = "Email", })
                                @Html.ValidationMessageFor(m => m.SenderEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-3" })*@
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control form-control-full", rows = 8, @placeholder = "Message" })
                                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-10">
                                <input type="submit" class="btn btn-default" value="Send" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
 </div>